{
  "extends": [
    "codex/ts"
  ],
  "rules": {
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": "property",
        "format": ["camelCase", "PascalCase"],
        "filter": {
          // Allow "2xx" as a property name, used in the API response schema
          "regex": "^(2xx)$",
          "match": false
        }
      }
    ],
    "jsdoc/require-returns-type": "off"
  }
}
