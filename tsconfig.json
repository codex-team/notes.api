{
  "compilerOptions": {
    "baseUrl": "./src" ,
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@infrastructure/*": ["infrastructure/*"],
      "@presentation/*": ["presentation/*"],
    }
  }
}
